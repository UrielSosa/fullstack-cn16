<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {'title': 'Home'})  %>
<body>
	<!-- Header -->
	<%- include('partials/header')  %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu última visita</h2>
			</div>
			<!-- Show the "visited" products -->

			<% visited.forEach(product => { %>
				
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/¿?">
							<figure class="product-box_image">
								<img src="/images/products/<%= product.image %>" alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2><%= product.price %></h2>
								<span>DISCOUNT % OFF</span>
								<p>PRODUCT NAME</p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>

			<% }) %>
					
		</div>
	</div>
	<!-- /ultima visita -->

	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<!-- Show the "in-sale" products -->

			<% insale.forEach(product => { %>
				<%- include('products/product', { product: product, title: 'extra' }) %> 
			<% }) %>

		</div>
	</div>
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include('partials/footer')  %>
	
	<!-- /footer -->
</body>	
</html>