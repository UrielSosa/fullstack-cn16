<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title: 'Create'})  %>

<body>
	<!-- Header -->
	<%- include('../partials/header')  %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Formulario de creación de productos</h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/products" method="POST" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" placeholder="Ej: Zapatillas Reebok" class="form-input" value="<%= typeof old != 'undefined'? old.name: '' %>">
						<% if (typeof errors != 'undefined' && typeof errors.name != 'undefined') { %>
							<span style="color: red"><%= errors.name.msg %></span>
						<% } %>
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" placeholder="Ej: 5678" class="form-input" value="<%= typeof old != 'undefined'? old.price: '' %>">
						<% if (typeof errors != 'undefined' && typeof errors.price != 'undefined') { %>
							<span style="color: red"><%= errors.price.msg %></span>
						<% } %>
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input type="text" id="discount" name="discount" placeholder="Ej: 15" class="form-input" value="<%= typeof old != 'undefined'? old.discount: '' %>">
						<% if (typeof errors != 'undefined' && typeof errors.discount != 'undefined') { %>
							<span style="color: red"><%= errors.discount.msg %></span>
						<% } %>
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">
							<option value="">Elegí</option>
							<option value="1" <%= typeof old != 'undefined' && old.category == 'in-sale'? 'selected': null %>>En oferta</option>
							<option value="2" <%= typeof old != 'undefined' && old.category == 'visited'? 'selected': null %>>Últimos agregados</option>
						</select>
						<% if (typeof errors != 'undefined' && typeof errors.category != 'undefined') { %>
							<span style="color: red"><%= errors.category.msg %></span>
						<% } %>
					</div>
					<div class="col-12">
						<label for="image" class="form-label">Agregar imagen</label>
						<input type="file" name="image" id="image" accept=".jpg, .png, .jpeg">
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descripción:</label>
						<textarea name="description" id="description" class="form-input"><%= typeof old != 'undefined'? old.description: '' %></textarea>
						<% if (typeof errors != 'undefined' && typeof errors.description != 'undefined') { %>
							<span style="color: red"><%= errors.description.msg %></span>
						<% } %>
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('../partials/footer')  %>
	<!-- /footer -->
</body>	
</html>